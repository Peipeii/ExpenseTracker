<!-- ./views/layouts/new.handlebars -->
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Add New Expense</h5>
          <small class="text-muted form-text">＊必填欄位</small>

          <hr>
          <form method="POST" action="/records">
            <div class="form-group form-row">
              <label for="date" class="col-md-4 col-form-label">日期＊</label>
              <div class="col-md-8">
                <input type="date" class="form-control" id="date" name="date" value="{{today}}">
              </div>
            </div>

            <div class=" form-group form-row">
              <label for="name" class="col-md-4 col-form-label">名稱＊</label>
              <div class="col-md-8">
                <input type="text" class="form-control" id="name" name="name">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="category" class="col-md-4 col-form-label">類別＊</label>
              <div class="col-md-8">
                <select class="form-control" id="category" name="category">
                  <option value="" selected disabled hidden>請選擇</option>
                  {{#each categories}}
                  <option>{{this.name}}</option>
                  {{/each}}
                </select>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="amount" class="col-md-4 col-form-label">金額＊</label>
              <div class="col-md-8">
                <input type="number" class="form-control" id="amount" name="amount" min="0">
              </div>
            </div>

            <div class="form-group form-row card-footer text-muted text-right border-top-0 mt-5">
              <div class="col-md-12">
                <button class="btn btn-info w-25" type="submit">儲存</button>
              </div>
            </div>
          </form>
        </div>

        {{!-- <small class="card-footer text-muted text-right">
          <button class="btn btn-info w-25" type="submit">儲存</button>
        </small> --}}

      </div>
    </div>
  </div>
</div>